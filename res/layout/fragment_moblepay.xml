<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/youdianhui3"
    android:scrollbars="none" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/youdianhui3"
        android:orientation="vertical" >

        <LinearLayout
            android:background="@color/dise_bai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/zhusediao_lan"
                android:text="金额" />

            <EditText
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/et_how_much"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:background="@color/dise_bai"
                android:padding="5dp"
                android:maxLength="8"
                android:layout_marginTop="5dp"
                android:hint="@string/pleaseinputmoney"
                android:inputType="numberDecimal"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/text_ps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/bluelighter" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1px"
            android:background="@color/dise_bai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/zhusediao_lan"
                android:text="类型" />

            <Spinner
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/sp_pay_type"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="19sp"/>

        </LinearLayout>

        <TextView
            android:textSize="18sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:textColor="@color/zhusediao_lan"
            android:text="支付方式"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.fujianmenggou.util.ListViewForScrollView
            android:id="@+id/lv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
		
        <Button
            android:layout_margin="20dp"
            android:id="@+id/btn_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/lanlv"
            android:text="下一步"
            android:textColor="@color/dise_bai" />

        <TextView
            android:text="盟购将配合银行共同打击无真实交易背景的虚假交易，银行卡转账套现或洗钱等被禁止的交易行为，请如实交易，否则款项将不能提现！"
            android:textSize="14sp"
            android:padding="16dp"
            android:textColor="@color/ziti_hui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text"
            android:textSize="14sp"
            android:padding="16dp"
            android:textColor="@color/ziti_hong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>