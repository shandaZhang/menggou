<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout_1"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="56dp"
        layout="@layout/actionbar_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_shaixuan1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="起始日期"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="-"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_shaixuan2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="结束日期"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tmp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="元"
            android:textColor="@color/youdianhui"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_zongshouyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/tmp5"
            android:text="0"
            android:textColor="@color/zhusediao_lan"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/tv_zongshouyi"
            android:text="总收益："
            android:textColor="@color/youdianhui"
            android:textSize="18sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_shouyimingxi"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>