<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ziti_hui"
    android:padding="6dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_camer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="拍照"
        android:textColor="@color/dise_bai"
        android:layout_marginTop="6dp"
        android:background="@drawable/rectangle_lanlv" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="从相册导入" 
        android:layout_marginTop="6dp"
        android:textColor="@color/dise_bai"
        android:background="@drawable/rectangle_red"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:text="取消"
        android:textColor="@color/ziti_hui"
        android:background="@drawable/rectangle_bai" />

</LinearLayout>
