<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
            layout="@layout/actionbar_default"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

        <TextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/zhusediao_lan"
                android:text="支付"/>

        <RelativeLayout
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:background="@color/dise_bai"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="@color/zhusediao_lan"
                    android:visibility="invisible"
                    android:text="获取支付方式中……"/>

            <Spinner
                    android:id="@+id/sp_pay_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="19sp"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/btn_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/lanlv"
            android:text="下一步"
            android:textColor="@color/dise_bai" />

</LinearLayout>