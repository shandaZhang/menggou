<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umeng_socialize_comments_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_fenxiang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/fuzhi1"
        android:gravity="center_horizontal"
        android:text="分享"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_chakan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/yulan"
        android:gravity="center_horizontal"
        android:text="查看"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_bianji"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/bianji"
        android:gravity="center_horizontal"
        android:text="编辑"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_shanchu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/shanchu"
        android:gravity="center_horizontal"
        android:text="删除"
        android:textSize="18sp" />

</LinearLayout>