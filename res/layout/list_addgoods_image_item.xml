<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/btn_cangle_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ring_make_add_unable" />

    <ImageView
        android:id="@+id/btn_del_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignRight="@+id/btn_cangle_image"
        android:layout_alignTop="@+id/btn_cangle_image"
        android:src="@drawable/del_min"
        android:visibility="gone" />

</RelativeLayout>