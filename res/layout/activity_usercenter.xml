<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent" >

        <include
                layout="@layout/actionbar_default" />
        <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="match_parent" >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:background="@drawable/blue_corners_bg"
                                android:orientation="vertical"
                                android:padding="@dimen/activity_vertical_margin" >

                                <TextView
                                        android:id="@+id/tv_text1"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:text="账号"
                                        android:textColor="@color/umeng_socialize_list_item_textcolor"
                                        android:textSize="20sp" />

                                <TextView
                                        android:id="@+id/tv_text2"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:text="姓名"
                                        android:textColor="@color/umeng_socialize_list_item_textcolor"
                                        android:textSize="20sp" />

                                <TextView
                                        android:id="@+id/tv_text3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:text="身份证"
                                        android:textColor="@color/umeng_socialize_list_item_textcolor"
                                        android:textSize="20sp" />

                                <TextView
                                        android:id="@+id/tv_text4"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:text="银行卡"
                                        android:textColor="@color/umeng_socialize_list_item_textcolor"
                                        android:textSize="20sp" />

                                <TextView
                                        android:id="@+id/tv_text5"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:text="邀请码"
                                        android:textColor="@color/umeng_socialize_list_item_textcolor"
                                        android:textSize="20sp" />

                                <TextView
                                        android:id="@+id/tv_text6"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:text="状态"
                                        android:textColor="@color/umeng_socialize_list_item_textcolor"
                                        android:textSize="20sp" />

                                <TextView
                                        android:id="@+id/tv_text7"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="1"
                                        android:text="费率"
                                        android:textColor="@color/umeng_socialize_list_item_textcolor"
                                        android:textSize="20sp" />
                        </LinearLayout>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/activity_vertical_margin"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:paddingTop="@dimen/activity_vertical_margin"
                                android:text="已上传相关照片"
                                android:textColor="@color/umeng_socialize_list_item_textcolor"
                                android:textSize="18sp" />
                        <HorizontalScrollView
                                android:id="@+id/hsc_tmp1"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:background="@color/dise_bai"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingRight="@dimen/activity_horizontal_margin"
                                android:scrollbars="none" >

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="100dp"
                                        android:orientation="horizontal" >

                                        <ImageView
                                                android:id="@+id/iv_image1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_marginLeft="10dp"
                                                android:adjustViewBounds="true"
                                                android:scaleType="centerCrop" />

                                        <ImageView
                                                android:id="@+id/iv_image2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_marginLeft="10dp"
                                                android:adjustViewBounds="true"
                                                android:scaleType="centerCrop" />

                                        <ImageView
                                                android:id="@+id/iv_image3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_marginLeft="10dp"
                                                android:adjustViewBounds="true"
                                                android:scaleType="centerCrop" />

                                        <ImageView
                                                android:id="@+id/iv_image4"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_marginLeft="10dp"
                                                android:adjustViewBounds="true"
                                                android:scaleType="centerCrop" />

                                        <ImageView
                                                android:id="@+id/iv_image5"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_marginLeft="10dp"
                                                android:adjustViewBounds="true"
                                                android:scaleType="centerCrop" />
                                </LinearLayout>
                        </HorizontalScrollView>


                </LinearLayout>
        </ScrollView>
</LinearLayout>
