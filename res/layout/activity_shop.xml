<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/lanlv"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:layout_marginLeft="48dp"
                android:background="@drawable/top_search_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="6dp"
                    android:src="@drawable/ckwd_" />

                <EditText
                    android:id="@+id/edit_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:paddingRight="6dp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp" >
            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/title_search"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/btn_classify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/title_feilei"
                android:visibility="visible" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_shopMess"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dise_bai" >

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="6dp"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp" >

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="厦门微商盟信息科技有限公司"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_adds"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="厦门湖里区金山街道"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:singleLine="true"
                            android:text="18450023900"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_phone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/phone" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#3c3c3c"/>

        <LinearLayout
            android:id="@+id/view_orders"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:background="@color/dise_bai"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/btn_order_newest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/text_order_newest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="最新"
                    android:textColor="@color/hui_to_lanlv"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_order_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/text_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="价格"
                    android:textColor="@color/hui_to_lanlv"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/image_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_order_price"
                    android:src="@drawable/sort" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_order_sales"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/text_order_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="销量"
                    android:textColor="@color/hui_to_lanlv"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/image_order_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_order_sales"
                    android:src="@drawable/sort" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_order_com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/text_order_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="佣金"
                    android:textColor="@color/hui_to_lanlv"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/image_order_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_order_com"
                    android:src="@drawable/sort" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:scaleType="fitXY"
            android:src="@drawable/cart_listview_gap" />

        <com.fujianmenggou.ckw.PullToRefreshListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.fujianmenggou.ckw.PullToRefreshListView>
    </LinearLayout>
	<LinearLayout
            android:id="@+id/view_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#333C3C3C"
         android:visibility="invisible"
        >

        <RelativeLayout
            android:id="@+id/menu_null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" 
            android:background="@null"
            >
        </RelativeLayout>

        <ListView
            android:id="@+id/lstView_classify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:layout_marginTop="48dp"
            android:layout_height="wrap_content"
            android:background="@null"
            >
        </ListView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#330ba29a"
        android:layout_marginTop="48dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/loading_prog_loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/loading_text_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据加载中..."
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/dise_bai"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/loading_btn_refresh"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="48dp"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:background="@drawable/press_rectangle_2small_lanlv"
                android:textColor="@color/dise_bai"
                android:text="刷新试试" />

        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/image_toTOP"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/to_top" />
			<ImageView
                android:id="@+id/btn_finish"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/fx_common_title_back_pressed" />
</RelativeLayout>
