<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:background="@color/dise_bai"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingTop="1px" >

    <ImageView
        android:id="@+id/tab_icon1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="-12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/tab_icon_background"
        android:scaleType="fitCenter"
        
        android:src="@drawable/tab_icon_1" />

    <ImageView
        android:id="@+id/tab_icon2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="-12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/tab_icon_background"
        android:scaleType="fitCenter"
        android:src="@drawable/tab_icon_2" />

    <ImageView
        android:id="@+id/tab_icon3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="-12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/tab_icon_background"
        android:scaleType="fitCenter"
        android:src="@drawable/tab_icon_3" />

    <ImageView
        android:id="@+id/tab_icon4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="-10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/tab_icon_background"
        android:scaleType="fitCenter"
        android:src="@drawable/tab_icon_4" />

</LinearLayout>